<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.auser.demouicontrol.RatingBarActivity">

    <RatingBar

        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="43dp"
        android:isIndicator="true"
        android:numStars="3"
        android:rating="1.5"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:progressDrawable="@drawable/ratingbar_selector"
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="33dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="5"
        app:layout_constraintLeft_toLeftOf="@+id/ratingBar1"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar1" />
</android.support.constraint.ConstraintLayout>
